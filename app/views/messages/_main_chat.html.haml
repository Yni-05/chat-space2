.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        グループ１
      .main-header__left-box__member-list
        Member:
        .main-header__left-box__member-list__member
          yanai
    
    .main-header__edit-btn
      = link_to "Edit", class: "edit-link-btn"

  .messages
    = render @messages

  .form
    .form__message
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_filed :image, class: 'hidden'
        = f.submit 'Send', clas: 'form__submit'