.side-bar
  .side-header
    .side-header__box
      %h3.side-header__box__user-name
        = current_user.name
      .side-header__box__menu
        .side-header__box__menu__new-group
          = link_to new_group_path, class: "top-items__icon-btn" do
            = icon('fas', 'edit')
        .side-header__box__menu__edit-user
          = link_to edit_user_path(current_user), class: "top-items__icon-btn" do
            = icon('fas', 'cog', class: 'icon')

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
